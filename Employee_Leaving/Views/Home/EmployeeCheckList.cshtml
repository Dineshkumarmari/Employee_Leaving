@using System.Security.Claims;
@model Employee
@{
    ViewData["Title"] = "Admin";
}
<style>
    * {
        font-family: 'Times New Roman', Times, serif;
    }
</style>
<body style="background-color:lavender; color:black">
    
    <div class="text-center card w-50 mx-auto" style="margin-top:6% ;">
     <div class="card-body">
            <h1 style="color:black ; margin-top:2%">Employee Detail</h1>

            <style>
                table {
                    width: 40%;
                    border: 1px solid;
                    border-radius: 30px;
                }
            </style>

            @using (Html.BeginForm(FormMethod.Post))
            {
                <div style="margin-top:1%" class="card-text ">
                    <div align="center">

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">Employee Id : </div>
                            <div>
                                @Html.DisplayFor(m => m.Emp_Id ,new { @class="form-control", required = "required" , maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">Name : </div>

                            <div>
                                @Html.DisplayFor(m => m.Name ,new { @class="form-control", required = "required" , maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="row row-cols-2 ">
                            <div style="color:mediumblue">Email Id : </div>
                            <div>
                               @Html.DisplayFor(m => m.Email_Id ,new { @class="form-control", required = "required", maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">Password : </div>
                            <div>
                                @Html.DisplayFor(m => m.Password ,new { @class="form-control", required = "required" , maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">Phone Number : </div>
                            <div>
                                @Html.DisplayFor(m => m.PhoneNum ,new { @class="form-control",required = "required" , maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">Gender : </div>

                            <div>
                                @Html.DisplayFor(m => m.Gender ,new { @class="form-control", required = "required" , maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">Age : </div>
                            <div>
                                @Html.DisplayFor(m => m.Age ,new { @class="form-control", required = "required" , maxlength = "50"})
                            </div>
                        </div>

                        <div style="height:50px; width: 80% ;" class="mx-auto row row-cols-2 ">
                            <div style="color:mediumblue">City : </div>
                            <div>
                                @Html.DisplayFor(m => m.Location ,new { @class="form-control", required = "required" , maxlength = "50"})
                            </div>
                        </div>


                        <div>

                            <a href="/Home/Edit?Emp_Id=@Model.Emp_Id" class="btn btn-primary">
                                Edit
                            </a>
                            </div>
                     
                    </div>

                </div>

            }
        </div>
    </div>
</body>

