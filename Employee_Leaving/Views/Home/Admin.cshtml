@{
   
    Layout = "~/Views/Shared/Login.cshtml";
}
@model Employee_Leaving.Models.LoginDTO
<style>
    * {
        font-family: 'Times New Roman', Times, serif;
    }
</style>
<body style="background-color:white; color:black">
    <div class="text-center card w-50 mx-auto " style="box-shadow:20px 20px 50px 10px lightblue inset; margin-top:155Px">
        <div class="card-body shadow rounded">
            <h1 class="display-8 card-title" style="color:black">Login Page</h1>
          
            <style>
                table {
                    width: 40%;
                    border: 1px solid;
                    border-radius: 30px;
                }
            </style>

    @using (Html.BeginForm(FormMethod.Post))
    {
      <div class="card-text">
         <div align="center" >

                <div style="height:50px; width: 85% ;" class="mx-auto row row-cols-3 ">
                <div>Email_Id: </div>
                <div>

                                @Html.TextBoxFor(m => m.Email_Id ,new { @class="form-control",required = "required" , maxlength = "50"})
                </div>
                </div>

                <div style="height:50px; width: 85% ;" class="mx-auto row row-cols-3 ">
                <div>Password: </div>
                <div>
                                @Html.TextBoxFor(m => m.Password ,new {@class="form-control",required = "required" , maxlength = "20"})
                </div>
                    </div>
                      
                        <div>
                            <button class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-in-right" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                                    <path fill-rule="evenodd" d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                                </svg> Login
                            </button>
                        </div>
                   
         </div>
               
        </div>
      
        }
     </div>
       </div>
       </body>
  